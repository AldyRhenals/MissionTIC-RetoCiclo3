@page
@model ProyectoCiclo3.App.Frontend.Pages.EditAvionModel
@{
    var avion = Model.Avion;
}

<div class="text-center">
    <form method = "POST">
        <input type="text" class="form-control d-none" id="id" name="id" required placeholder="id" asp-for="@avion.id" readonly>

        <label for="marca" class="form-label">Marca:</label>
        <input type="text" class="form-control" id="marca" name="marca" required placeholder="Marca" asp-for="@avion.marca">
        
        <label for="modelo" class="form-label">Modelo:</label>
        <input type="text" class="form-control" id="modelo" name="modelo" required placeholder="Modelo" asp-for="@avion.modelo">

        <label for="numero_asientos" class="form-label">Número de asientos:</label>
        <input type="text" class="form-control" id="numero_asientos" name="numero_asientos" required placeholder="Número de asientos" asp-for="@avion.numero_asientos">

        <label for="numero_banios" class="form-label">Número de baños:</label>
        <input type="number" class="form-control" id="numero_banios" name="numero_banios" required placeholder="Número de baños" asp-for="@avion.numero_banios">

        <label for="capacidad_maxima_peso" class="form-label">Capacidad máxima de peso al despegue:</label>
        <input type="number" class="form-control" id="capacidad_maxima_peso" name="capacidad_maxima_peso" required placeholder="Toneladas" asp-for="@avion.capacidad_maxima_peso">
        <hr>
        <button type="submit" class="btn btn-success">Actualizar</button>
    </form>
</div>
