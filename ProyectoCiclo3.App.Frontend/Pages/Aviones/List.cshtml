@page
@model ProyectoCiclo3.App.Frontend.Pages.ListAvionesModel
@{}
 
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Marca</th>
      <th scope="col">Modelo</th>
      <th scope="col">Número de asientos</th>
      <th scope="col">Número de baños</th>
      <th scope="col">Capacidad máxima de peso al despegue (toneladas)</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
   @foreach (var aviones in Model.Aviones)
    {
        <tr>
            <td>@Aviones.id</td>
            <td>@Aviones.marca</td>
            <td>@Aviones.modelo</td>
            <td>@Aviones.numero_asientos</td>
            <td>@Aviones.numero_banios</td>
            <td>@Aviones.capacidad_maxima_peso</td>
            <td>
              <a class="btn btn-info" asp-page="./Details" asp-route-avionId = "@avion.id"><i class="fas fa-adjust"></i>Ver</a>
              <a class="btn btn-info" asp-page="./Edit" asp-route-avionId = "@avion.id">Editar</a>
              <a class="btn btn-danger" href="">Eliminar</a>
            </td>
        </tr>
    }
  </tbody>
</table>
